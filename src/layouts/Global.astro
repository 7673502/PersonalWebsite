import { site } from '../config.js';
---

<layout>
  <header>
    <nav>
        <span id="name">Pramod Anandarao</span>
        <div id="nav-content">
          <a href="/">Home</a>
          <a href="/resume">Resume</a>
          <a href="/contact">Contact</a>
          <a href="https://twitter.com/YourUsername" target="_blank" rel="noopener noreferrer">
